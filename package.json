{
  "name": "telegram-speech-bot",
  "version": "1.0.0",
  "description": "",
  "main": "dist/bot.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/bot.js",
    "dev": "ts-node src/bot.ts",
    "dev:watch": "ts-node --watch src/bot.ts",
    "test:config": "node scripts/test-bot.js",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "migrate:latest": "knex migrate:latest --knexfile knexfile.ts",
    "migrate:rollback": "knex migrate:rollback --knexfile knexfile.ts",
    "migrate:make": "knex migrate:make --knexfile knexfile.ts -x ts",
    "seed:run": "knex seed:run --knexfile knexfile.ts",
    "seed:make": "knex seed:make --knexfile knexfile.ts -x ts"
  },
  "keywords": [
    "telegram",
    "bot",
    "speech-to-text",
    "whisper",
    "typescript"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@google/generative-ai": "^0.21.0",
    "@types/knex": "^0.15.2",
    "axios": "^1.6.2",
    "dotenv": "^16.3.1",
    "knex": "^3.1.0",
    "pg": "^8.11.3",
    "pino": "^10.1.0",
    "pino-pretty": "^13.1.1",
    "sqlite": "^5.1.1",
    "sqlite3": "^5.1.6",
    "telegraf": "^4.15.6"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/pg": "^8.10.9",
    "@types/sqlite3": "^3.1.11",
    "ts-node": "^10.9.1",
    "typescript": "^5.3.2"
  }
}
